    public void setNewGuest(int generatedID,String firstName,String middlename,
            String lastname, String birthmonth,String birthday, String birthyear,
            String mobileNumber, String guestEmail){
        
        accountID = generatedID;
        fname = firstName;
        mname = middlename;
        lname = lastname;
        bmonth= birthmonth;
        bday  = birthday;
        byear = birthyear;
        mobileNum = mobileNumber;
        email = guestEmail;
        
        birthdate = bmonth + " " + bday + "," + byear;
    }

