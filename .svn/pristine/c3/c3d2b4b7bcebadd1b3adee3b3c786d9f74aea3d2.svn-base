    //display the search result in the window by replacing the txt
    public void displaySearchResult(){
        int[] results = new int[5];
        results = database.getRoomsNumResult();
        
        roomNumLabel1.setText(Integer.toString(results[0])); 
        roomNumLabel2.setText(Integer.toString(results[1])); 
        roomNumLabel3.setText(Integer.toString(results[2])); 
        roomNumLabel4.setText(Integer.toString(results[3])); 
        roomNumLabel5.setText(Integer.toString(results[4])); 

        roomType1.setText(database.getSelectedRoomType() + " bed");
        roomType2.setText(database.getSelectedRoomType() + " bed");
        roomType3.setText(database.getSelectedRoomType() + " bed");
        roomType4.setText(database.getSelectedRoomType() + " bed");
        roomType5.setText(database.getSelectedRoomType() + " bed");
        
        roomBeds1.setText(Integer.toString(database.getSelectedRoomBed()));
        roomBeds2.setText(Integer.toString(database.getSelectedRoomBed()));
        roomBeds3.setText(Integer.toString(database.getSelectedRoomBed()));
        roomBeds4.setText(Integer.toString(database.getSelectedRoomBed()));
        roomBeds5.setText(Integer.toString(database.getSelectedRoomBed()));
        
        roomPrice1.setText(Float.toString(database.getSelectedRoomPrice())+ " php");
        roomPrice2.setText(Float.toString(database.getSelectedRoomPrice())+ " php");
        roomPrice3.setText(Float.toString(database.getSelectedRoomPrice())+ " php");
        roomPrice4.setText(Float.toString(database.getSelectedRoomPrice())+ " php");
        roomPrice5.setText(Float.toString(database.getSelectedRoomPrice())+ " php");
        
        
        //hide result components based on result count
        if(database.getResultCount() < 1){
            roomNumLabel1.setVisible(false);
            roomType1.setVisible(false);
            roomBeds1.setVisible(false);
            roomPrice1.setVisible(false);
            reserveButton1.setVisible(false);
        }
        if(database.getResultCount() < 2){
            roomNumLabel2.setVisible(false);
            roomType2.setVisible(false);
            roomBeds2.setVisible(false);
            roomPrice2.setVisible(false);
            reserveButton2.setVisible(false);
        }
        
        if(database.getResultCount() < 3){
            roomNumLabel3.setVisible(false);
            roomType3.setVisible(false);
            roomBeds3.setVisible(false);
            roomPrice3.setVisible(false);
            reserveButton3.setVisible(false);
        }
        
        if(database.getResultCount() < 5){
            roomNumLabel5.setVisible(false);
            roomType5.setVisible(false);
            roomBeds5.setVisible(false);
            roomPrice5.setVisible(false);
            reserveButton5.setVisible(false);
        }
        
        if(database.getResultCount() < 4){
            roomNumLabel4.setVisible(false);
            roomType4.setVisible(false);
            roomBeds4.setVisible(false);
            roomPrice4.setVisible(false);
            reserveButton4.setVisible(false);
        }
    }
    
    /**
     * changes picture based on selection of room type.
     */
public void changePicture(){
    
    String roomtype = database.getSelectedRoomType();
    
    switch(roomtype){
        case "Single":
            roomPictureLabel.setIcon(new javax.swing.ImageIcon(getClass().getResource("/img/SINGLE_RESULT.png")));
            break;
        case "Twin":
            roomPictureLabel.setIcon(new javax.swing.ImageIcon(getClass().getResource("/img/TWIN_RESULT.png")));
            break;
        case "Triple":
            roomPictureLabel.setIcon(new javax.swing.ImageIcon(getClass().getResource("/img/TRIPLE_RESULT.png")));
            break;
        case "King":
            roomPictureLabel.setIcon(new javax.swing.ImageIcon(getClass().getResource("/img/KING_RESULT.png")));
            break;
        case "Suite":
            roomPictureLabel.setIcon(new javax.swing.ImageIcon(getClass().getResource("/img/SUITE_RESULT.png")));
            break;    
        default:
            break;
    }
    

}
    

