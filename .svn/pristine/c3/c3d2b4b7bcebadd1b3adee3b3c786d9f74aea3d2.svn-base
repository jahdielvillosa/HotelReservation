    private void paymentButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_paymentButtonActionPerformed
        
        //checks if the guest have reserved any of the rooms,
        //if yes, proceed to payment transactions
        if(database.getSelectedRoomsCounter() > 0){
            PaymentFrame payment = new PaymentFrame();
            payment.displayFrame();
            this.setVisible(false);
        }else{
            JOptionPane.showMessageDialog(jPanel1, "Please select a room "
                    + "from the list to be reserved.");
        }   
        database.getGuestInfo();    // display guest information result on console
    }//GEN-LAST:event_paymentButtonActionPerformed
    
    
    private void cancelButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_cancelButtonActionPerformed
       preferenceFrame prefer = null;
        try {
            prefer = new preferenceFrame();
        } catch (FileNotFoundException ex) {
            Logger.getLogger(SearchResultFrame.class.getName()).log(Level.SEVERE, null, ex);
        }
       prefer.displayFrame();
       this.setVisible(false);
    }//GEN-LAST:event_cancelButtonActionPerformed

    private void formWindowOpened(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowOpened
        // TODO add your handling code here:
        //fading in effect
         for(double i=0.0;i<1.0;i=i+0.1){
            String val = i+"F";
            float f = Float.valueOf(val);
            this.setOpacity(f);
            try{
                Thread.sleep(20);
            }catch(Exception e){
            
            }
        }
         
         //Reset room count upon returning to prev window
         database.setRoomCounter(0);
        
         //get the room information from the guest's preference
         database.getRoomNumberbyPref();
         
         //display the Room Numbers of the result
         database.dispRoomNum();
         
         // displays the search result in the panel
         displaySearchResult(); 
         
         //change picture result
         changePicture();
    }//GEN-LAST:event_formWindowOpened
    
    /**
     * When reserve buttons are clicked or selected, get the room number and status
     * of the button and transfer it to the current guest. If selected, increase the 
     * reserve room count, if deselected, decrease the count.
     * 
     */
    private void reserveButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_reserveButton1ActionPerformed
       
       boolean buttonStatus = reserveButton1.isSelected();
       database.setSelectedRoomOnGuest(parseInt(roomNumLabel1.getText()), buttonStatus);
       System.out.println("Room " +roomNumLabel1.getText() + " is reserved by guest" );
       
       //change color of text
       if(buttonStatus){
           roomNumLabel1.setForeground(new Color(0, 102, 102));
           roomType1.setForeground(new Color(0, 102, 102));
