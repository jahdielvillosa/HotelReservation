    public void displayResult(){
        int[] roomNums = new int[10];
        
        int roomCounter = database.getSelectedRoomsCounter();
        roomNums = database.getGuestSelRooms();
        
        roomTypeResults.setText(database.getSelectedRoomType());
        
        switch(roomCounter){
            case 1:
                RoomNumResults.setText(
                    Integer.toString(roomNums[0])
                );
                break;
            case 2:
                RoomNumResults.setText(
                    Integer.toString(roomNums[0])+","+
                    Integer.toString(roomNums[1])
                );
                break;
            case 3:
                RoomNumResults.setText(
                    Integer.toString(roomNums[0])+","+
                    Integer.toString(roomNums[1])+","+
                    Integer.toString(roomNums[2])
                );
                break;
            case 4:
                RoomNumResults.setText(
                    Integer.toString(roomNums[0])+","+
                    Integer.toString(roomNums[1])+","+
                    Integer.toString(roomNums[2])+","+
                    Integer.toString(roomNums[3])
                );
                break;
            case 5:
                RoomNumResults.setText(
                    Integer.toString(roomNums[0])+","+
                    Integer.toString(roomNums[1])+","+
                    Integer.toString(roomNums[2])+","+
                    Integer.toString(roomNums[3])+","+
                    Integer.toString(roomNums[4])
                );
                break;
            default:
                break;
        }
        
        //display the reservation date
        reservationDateResults.setText(database.startMonth + " " 
                + database.startDay + ", "+ database.startYear +" - "
                + database.endMonth + " " +database.endDay + ", "
                + database.endYear);
        
        System.out.println("Date of reservation: "+database.startMonth + " " 
                + database.startDay + ", "+ database.startYear +" - "
                + database.endMonth + " " +database.endDay + ", "
                + database.endYear);
        
        //Display the reservation total fee
        RoomPriceResults1.setText(Float.toString(database.getSelectedRoomPrice())+"php");
        calculateTotalFee();
        totalFeeResults.setText(Float.toString(totalFee)+"php");
        
        
    }
    
    public void calculateTotalFee(){
        int endDay   = parseInt(database.endDay);
        int startDay = parseInt(database.startDay);
        String startMonth = database.startMonth;
        totalFee = 0;
        
        if(startDay < endDay){
            stayDuration = 1+(parseInt(database.endDay) - parseInt(database.startDay));
        }else if(startDay > endDay){//startDay > endDay
            switch(startMonth){
                case "January": case "March": case "May": case "July": case "August": 
                case "October": case "December":
                    stayDuration = 1+((31+parseInt(database.endDay)) - parseInt(database.startDay));
                    break;
                
                case "February": case "April": case "June": case "September":  case "November":
                    stayDuration = 1+((30+parseInt(database.endDay)) - parseInt(database.startDay));
                    break;  
                default:
                    break;
            }
        }
        
        totalFee = database.getSelectedRoomsCounter() * database.getSelectedRoomPrice();
        totalFee *= stayDuration;
        
        //console log
        System.out.println("stayDuration: "+ stayDuration);
        System.out.println("Total Fee: " + totalFee +"php");
    }
    

