    public void getMyRooms(){
        myRooms = database.getGuestRooms();
        roomCounter = 0;
        
        for(int i=0;i<database.getRoomCounter();i++){
            if(guest.getAccountID() == myRooms[i].getOccupantID() ){
                roomNums[roomCounter] = myRooms[i]; //get the room number of guest
                roomCounter++;
            }
        }
    }
    
