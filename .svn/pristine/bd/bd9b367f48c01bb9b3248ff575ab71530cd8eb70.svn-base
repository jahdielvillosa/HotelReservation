    private void saveButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_saveButtonActionPerformed
        int status=0;
        
        //show dialog box for confirmation
        status = JOptionPane.showConfirmDialog(jPanel2, "Do you really want to cancel reservations?", 
                "Save changes", JOptionPane.YES_NO_OPTION);
        
        System.out.println("status: " + status);
        
        if(status == 0){
            //store data into the file
            try {
                // TODO add your handling code here:
                database.setMyRoomReservationOK();
            } catch (FileNotFoundException ex) {
                Logger.getLogger(ManageAccountsFrame.class.getName()).log(Level.SEVERE, null, ex);
            }
            
            GuestOptionFrame option = new GuestOptionFrame();
            option.dispFrame();
            this.setVisible(false);
            
            System.out.println("Save changes in reservation.");
            roomCanceledCount= 0;
            
        }else{
            
            System.out.println("canceled changes in reservation.");
        }
        
    }//GEN-LAST:event_saveButtonActionPerformed

